@using CimenaCityProject.CustomHtmlHelper;
@using CimenaCityProject.ViewModels
@model CimenaCityProject.Models.Movie

@{
    ViewBag.Title = "Edit";
}

<link rel="stylesheet" type="text/css" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>..

<link rel="stylesheet" type="text/css" href="~/js/datedropper.css">
<script src="~/Scripts/datedropper.js" type="text/javascript"></script>


<h2>Edit</h2>


@using (Html.BeginForm("Edit","Movie",FormMethod.Post,new { enctype= "multipart/form-data"}))
{
   // MovieData md = (MovieData)ViewData["showTimeQry"];
    
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Movie</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MovieID)


        <div class="form-group">
            [Must Enter The Date]
            @Html.LabelFor(model => model.ReleaseDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                <input type="date" name="ReleaseDate" id="ReleaseDate" value="@Model.ReleaseDate"
                       onkeypress="CheckEntry(event, /[a-zA-z]/, 'only this Date format  MM/dd/yy')" />


            </div>
            @ViewBag.exeptionMessage
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MovieName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MovieName)
                @Html.ValidationMessageFor(model => model.MovieName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Rate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Rate)
                @Html.ValidationMessageFor(model => model.Rate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Director, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Director)
                @Html.ValidationMessageFor(model => model.Director)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MovieDescrption, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MovieDescrption)
                @Html.ValidationMessageFor(model => model.MovieDescrption)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-10">
                <label for="file">Upload Image:</label>
                <input type="file" name="file" id="file" class="btn btn-default" />
            </div>
        </div>
        <br /><br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </div>

      
            <div class="col-md-offset-2 col-md-10">
             @Html.ActionLink("Edit Show Time", "Index", "MovieShowTime", new { id = Model.MovieID }, null)
            </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")  |  
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>

    $("#ReleaseDate").dateDropper();

</script>

