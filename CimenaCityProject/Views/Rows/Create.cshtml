@model CimenaCityProject.Models.Rows

@{
    ViewBag.Title = "Add Rows. ";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    int rowCapacity = (int)TempData["RowAmount"];
    int last = (int)ViewBag.last;
    @Html.Hidden("last", last)
    @Html.Hidden("rowCapacity", rowCapacity)
    <div class="form-horizontal">
        <h4>Add Rows</h4>
        <hr />
        @Html.ValidationSummary(true)
        <label> @ViewBag.Message</label>
        <div class="form-group">
            @Html.LabelFor(model => model.TheatersID, "TheatersID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TheatersID")
                @Html.ValidationMessageFor(model => model.TheatersID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RowNumber, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("RowNumber",last)
                @Html.ValidationMessageFor(model => model.RowNumber)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ChairCapacity, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ChairCapacity)
                @Html.ValidationMessageFor(model => model.ChairCapacity)
            </div>
        </div>


    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>


}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
