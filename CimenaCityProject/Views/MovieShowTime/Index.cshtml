@using CimenaCityProject.Models
@model CimenaCityProject.ViewModels.MovieData

@{
    ViewBag.Title = "Show Time";
}

<h2>Movie Show Time</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
          Movie Name
        </th>
        <th>
          Realse Date 
        </th>
        <th>
            Show Time
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Movie) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MovieName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseDate)
        </td>
        <td>
            @{
             foreach (var showTime in Model.MovieShowTime)
             {
                 if (showTime.MovieID == item.MovieID)
                    {
                        @showTime.ShowTime.TimeOfDay  @Html.ActionLink("|  Edit", "Edit", new { id = showTime.MovieShowTimeID }, TempData["MovieID"]=showTime.MovieID ) 
                <br />
                    }
               }
            }
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.MovieID }) |*@
            @Html.ActionLink("Details", "Details", new { id = item.MovieID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.MovieID })
        </td>
    </tr>
}

</table>
