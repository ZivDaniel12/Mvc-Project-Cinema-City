@model CimenaCityProject.Models.MovieShowTime

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>MovieShowTime</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MovieShowTimeID)
        @Html.HiddenFor(model => model.MovieID)
        <div class="form-group">
           
            <div class="col-md-10">
                @ViewBag.MovieName
                @Html.ValidationMessageFor(model => model.MovieID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ShowTime, new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                Old time @Html.Label(Model.ShowTime.TimeOfDay.ToString())
                <br /><br />               
                <input type="time" id="newShowTimme"
                       name="newShowTimme"
                       onkeypress="CheckEntry(event,/[a-zA-z]/,'only this time format HH:mm:ssss')" />

            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default"  />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
